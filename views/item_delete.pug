extends layout

block content
  h1 #{title}: #{item.name}
  hr
  p #[strong Category: ]
    a(href=item.category.url) #{item.category.name}
  p #[strong Price: ] #{item.price}
  p #[strong Quantity: ] #{item.quantity}
  p #[strong Description: ] #{item.description}
  
  hr

  p Do you really want to delete this Book Copy?

  form(method='POST' action='')
    button.btn.btn-danger(type='submit') Delete
