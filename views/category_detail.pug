extends layout

block content

  h1 Category: #{category.name}
  hr
  p #{category.description}

  div(style='margin-left:20px;margin-top:20px')

    h4 Items

    dl
      each item in category_items
        dt
          a(href=item.url) #{item.name}
        dd Price - #{item.price}

      else
        p This genre has no items