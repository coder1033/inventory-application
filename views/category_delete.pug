extends layout

block content
  h1 #{title}: #{category.name}
  p Total Items #{category_items.length}

  if category_items.length

    p.alert.alert-danger.mt-3 Delete the following items before attempting to delete this category.

    div(style='margin-left:20px;margin-top:20px')

      h4 Items

      dl
      each item in category_items
        dt
          a(href=item.url) #{item.name}
        dd Price - #{item.price}
        hr
  else
    p Do you really want to delete this Category?

    form(method='POST' action='')

      button.btn.btn-danger(type='submit') Delete
